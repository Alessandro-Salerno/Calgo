Main;
    Declare float mass;
    Declare float gravity 9.81;
    Declare float weight;

    While (1 == 1);
        Output "What's your weight? (kg) ";
        Input mass;

        If (mass > 0);
            Set weight (mass * gravity);
            Output "Your weight is " weight " Newton(s)";

            Output "Press enter to run again... ";
            Input;
        Else;
            Output mass " Kg is not valid";
        End If;
    End While;
End Main;
